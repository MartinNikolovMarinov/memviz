{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build project with Makefile",
            "command": "/usr/bin/make",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "args": [
                "-j",
                "-C",
                "${workspaceFolder}/build",
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
        },
    ]
}
