{
    "version": 3,
    "configurePresets": [
        {
            "name": "release-unix",
            "displayName": "Release configuration",
            "description": "Release configuration",
            "binaryDir": "${sourceDir}/build",
            "environment": {
                "CC": "clang",
                "CXX": "clang++"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "MEMVIZ_USE_ANSI_LOGGING": true,
                "MEMVIZ_ENABLE_ASAN": false,
                "MEMVIZ_ENABLE_UBSAN": false,
                "MEMVIZ_ENABLE_TSAN": false,
                "MEMVIZ_USE_VULKAN": true,
                "MEMVIZ_DEBUG": "OFF"
            }
        },
        {
            "name": "release-win",
            "displayName": "Release configuration",
            "description": "Release configuration",
            "binaryDir": "${sourceDir}/build",
            "environment": {
                "VK_KHRONOS_PROFILES_PROFILE_NAME": "VP_LUNARG_desktop_portability_2021",
                "VK_KHRONOS_PROFILES_VALIDATE": "1",
                "VK_KHRONOS_PROFILES_EMULATE_PORTABILITY": "1"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "MEMVIZ_USE_ANSI_LOGGING": false,
                "MEMVIZ_USE_VULKAN": true,
                "MEMVIZ_DEBUG": "OFF"
            }
        },
        {
            "name": "debug-unix",
            "displayName": "Debug configuration",
            "description": "Debug configuration",
            "binaryDir": "${sourceDir}/build",
            "environment": {
                "VK_LAYER_PATH": "$env{VULKAN_SDK}/share/vulkan/explicit_layer.d",
                "VK_ADD_LAYER_PATH": "$env{VULKAN_TOOLSET}/Vulkan-ValidationLayers/build/etc/vulkan/explicit_layer.d",

                "VK_KHRONOS_PROFILES_PROFILE_NAME": "VP_LUNARG_desktop_portability_2021",
                "VK_KHRONOS_PROFILES_VALIDATE": "1",
                "VK_KHRONOS_PROFILES_EMULATE_PORTABILITY": "1",

                "CC": "clang",
                "CXX": "clang++"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "MEMVIZ_USE_ANSI_LOGGING": true,
                "MEMVIZ_ENABLE_ASAN": false,
                "MEMVIZ_ENABLE_UBSAN": true,
                "MEMVIZ_ENABLE_TSAN": false,
                "MEMVIZ_USE_VULKAN": true,
                "MEMVIZ_DEBUG": "ON"
            }
        },
        {
            "name": "debug-win",
            "displayName": "Debug configuration",
            "description": "Debug configuration",
            "binaryDir": "${sourceDir}/build",
            "environment": {
                "VK_KHRONOS_PROFILES_PROFILE_NAME": "VP_LUNARG_desktop_portability_2021",
                "VK_KHRONOS_PROFILES_VALIDATE": "1",
                "VK_KHRONOS_PROFILES_EMULATE_PORTABILITY": "1"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "MEMVIZ_USE_ANSI_LOGGING": false,
                "MEMVIZ_USE_VULKAN": true,
                "MEMVIZ_DEBUG": "ON"
            }
        }
    ]
}
